<h1 class="text-center">Recipe <%= @recipe.id %></h1>

<div class="d-flex align-items-center justify-content-evenly">
  <h3>Preparation time: <%= @recipe.prep_time%></h3>
  <div class="form-check form-switch">
    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
    <label class="form-check-label" for="flexSwitchCheckDefault">Public</label>
  </div>
</div>
<div class="d-flex flex-column" id="recipe-flex-column">
  <div>
    <h3>Cooking time: <%= @recipe.cook_time%></h3>
    <h3>Steps go here:</h3>
    <p><%= @recipe.steps %></p>
  </div>
</div>
